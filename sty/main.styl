
@import _vars
@import _fonts
@import 'nib'

body,html
  margin 0
  padding 0
  font-family 'AirNewzealand', tahoma, verdana
  font-size 100%
  color #fff
  background-color #000
  margin auto
  max-width 1040px
  overflow hidden

.clear
  clearfix()

.container
  padding 0 20px

.header
  background-image url('/img/background.jpg')
  background-repeat no-repeat
  background-position left
  background-color #fff
  box-shadow inset 2px 2px 2px rgba(0, 0, 0, 0.8)
  .background
    background linear-gradient(left, 20% rgba(0, 0, 0, 0.0), 60% #000)
    height 293px
    div
      float right
  .logo
    background url('/img/anz_logo.png')
    width 246px
    height 40px
    margin 30px 0 0 0
  .title
    clear both
    font-family 'AirNewzealand'
    font-size 400% 
    text-shadow 2px 2px 2px rgba(0, 0, 0, 0.8)
    margin 10px 0 0 0
    .mobileinsta
      display none

  .copy
    text-align right
    text-shadow 1px 1px 1px rgba(0, 0, 0, 0.8)
    font-family 'AirNewzealand'
    font-size 120% 
    margin 10px 0 0 0
    clear both
    .apex
      font-family 'ApexNewBook'
      font-size 120%
      padding 0 5px 0 5px
  .cta
    font-family 'ApexNewMedium'
    font-size 100%
    text-decoration underline
    margin 20px 0 0 0
    clear both
    a
      color #fff

.body
  border-top 20px solid #000 
  background-color #fff
  height 400px
  overflow-y auto
  text-align center
  .thumbnail
    position relative
    cursor pointer
    overflow hidden
    display inline-block
    background url('/img/loader.gif') no-repeat center
    box-shadow 1px 1px 2px 2px rgba(0, 0, 0, 0.4)
    width 158px
    height 158px
    margin 10px
    text-align center
    &.newer
      background-color #f0f371
    &.flagged
      background-color #fda2a2
    &.stuck
      background-color #8dfb8d
    &:hover .info
      bottom 0px
      transition all 0.2s ease-in 
    &.admin:hover .tools
      top 0px
      transition all 0.2s ease-in 
    img
      margin 4px 0 0 0
      width 150px
      height 150px
    .info
      font-family 'lucida grande',tahoma,verdana,arial,sans-serif
      font-size 9px
      position absolute
      opacity 0.7
      bottom -30px
      left 0px
      width 160px
      background-color #000
      transition all 0.2s ease-in 
      padding 5px 0
      line-height 20px
      text-align center

    .tools
      position absolute
      font-family ApexNewBook
      top -30px
      width 160px
      transition all 0.2s ease-in
      color #000
      font-size 12px
      line-height 20px
      text-align center
      .flag, .stick, .flagged, .stuck
        padding 5px 0
        display inline-block
        cursor pointer
        width 78px
        display inline-block
      .flag
        background-color #ffdddd
      .flagged
        background-color #ffaaaa
      .stick
        background-color #ddffdd
      .stuck
        background-color #ccffcc

  .bloader
    background url('/img/loader.gif') no-repeat center
    margin 5px
    height 40px
    line-height 40px
    color #000
    text-align right

.footer
  padding 10px 0 0 0
  .copy1
    font-size 240%
    font-family 'AirNewzealand'
    padding 0 0 5px 0
    .apex
      font-family 'ApexNewLight'
      padding 0 5px 0 5px

    .instagram_logo
      display inline-block
      background url('/img/icon_instagram.png') repeat scroll 0 0 / 100% auto transparent
      width 30px
      height 30px
      margin 0 0 -3px

  .copy2
    font-family 'ApexNewBook'
    font-size 100%

  .fpics
    padding 10px 0 0 0
    text-align left
    .fpic
      cursor pointer
      display inline-block
      background-color #fff
      width 127px
      height 127px
      padding 6px
      margin 0 25px 10px 0
      img
        display inline-block
        width 127px
    .loading
      height 127px
      background url('/img/bloader.gif') no-repeat center

  .tandc
    font-family 'ApexNewBook'
    text-align left
    margin 5px 0 0 0
    a
      color #fff

.fade
  display hidden
  position absolute
  background-color rgba(0, 0, 0, 0.9)
  top 250px
  left 0px
  height 0
  width 100%
  opacity 0
  z-index 5

.fade, .fadeon, .modal, .modalon
  transition opacity 0.2s linear 

.fadeon
  cursor pointer
  display block
  opacity 1

.modal
  font-family 'lucida grande',tahoma,verdana,arial,sans-serif
  font-size 13px
  display hidden
  position fixed
  width 700px
  height 0
  top 50%
  left 50%
  margin-top -200px
  margin-left -350px
  background url('/img/loader.gif') no-repeat center
  background-color #fff
  text-align left
  div 
    color #000
    display none

.modal
  .close
    cursor pointer
    background url("/img/close.png") no-repeat scroll -11px 0 / 200% auto transparent
    background-size 200%
    position absolute
    top 0px
    right 0px
    width 10px
    height 11px
    margin 5px
    &:hover
      background url('/img/close.png') 

  .image
    background url('/img/loader.gif') no-repeat center
    float left
    img
      max-width 400px
      max-height 400px
  .info
    width 260px
    padding 20px
    float right
    .profile
      float left
      width 100px
      height 100px
      background-color #efefef
      border-radius 10px
      img
        border-radius 10px
    .right
      float right
      text-align right
    .username
      font-weight bold
    .duration
      color #666
    .caption
        word-wrap break-word
    .share
      cursor pointer
      position absolute
      bottom 50px
      right 10px
      background-color #000
      padding 0 10px
      line-height 30px
      width 65px
      height 30px
      color #fff
      font-size 16px
      .share_f
        float right
        background url('/img/share_f.png')
        background-size 100%
        height 24px
        width 12px 
        margin 6px 0 0 0
    .totals
      position absolute
      width 260px
      bottom -20px
      right 0px
      color #fff
      background-color #000
      padding 5px 20px
      line-height 20px
      text-align center
      opacity 0
    .totals, .totalson
      transition all 0.2s ease-in 0.2s
    .totalson
      bottom 0px
      opacity 0.9

.modalon
  display block
  opacity 1
  height 400px 
  z-index 10 
  div
    display block

.modalpop
  background none
  min-height 200px
  background-color #fff

.capable
  font-family verdana
  font-size 12px
  float right
  margin 0 5px
  a
    color #fff
    text-decoration none

.sprite
  &.likes, &.tags, &.comments
    display inline-block
    width 12px
    height 11px
    margin 0 20px -2px 0
  &.likes
    background url('/img/stat_sprite.png')
  &.comments
    background url('/img/stat_sprite.png') -13px
  &.tags
    background url('/img/stat_sprite.png') -26px



