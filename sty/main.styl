
@import _vars
@import _fonts
@import 'nib'

body,html
  padding 0
  margin 0
  font-family 'AirNewzealand', tahoma, verdana
  font-size 13px
  color #fff
  width 810px

.clear
  clear both
  display block
  overflow hidden
  visibility hidden
  width 0
  height 0

.container
  background-color #000
  padding 0 20px

.header
  background-image url('/img/background.png')
  background-repeat no-repeat
  background-position left
  background-color #fff
  box-shadow inset 2px 2px 2px rgba(0, 0, 0, 0.8)
  .background
    background linear-gradient(left, 20% rgba(0, 0, 0, 0.0), 80% #000)
    height 293px
    div
      float right
  .logo
    background url('/img/anz_logo.png')
    width 246px
    height 40px
    margin 30px 0 0 0
  .title
    font-family 'AirNewzealand'
    font-size 60px
    text-shadow 2px 2px 2px rgba(0, 0, 0, 0.8)
    margin 10px 0 0 0

  .copy
    text-align right
    text-shadow 1px 1px 1px rgba(0, 0, 0, 0.8)
    font-family 'AirNewzealand'
    font-size 18px
    margin 10px 0 0 0
    .apex
      font-family 'ApexNewBook'
      font-size 18px
      padding 0 5px 0 5px
  .cta
    font-family 'ApexNewMedium'
    font-size 18px
    text-decoration underline
    margin 20px 0 0 0

.body
  border-top 20px solid #000 
  background-color #fff
  .outer
    display inline-block
    position relative
    left 50%
  .inner
    position relative
    left -50%
    .thumbnail
      float left
      margin 5px

.footer
  padding 20px 0
  .copy1
    font-size 36px
    .apex
      font-family 'ApexNewLight'
      font-size 36px
      padding 0 5px 0 5px

    .instagram_logo
      display inline-block
      background url('/img/icon_instagram.png')
      width 39px
      height 40px

  .copy2
    font-family 'ApexNewBook'
    font-size 20px
