
@import _vars
@import _fonts
@import 'nib'

body,html
  margin 0
  padding 0
  font-family 'AirNewzealand', tahoma, verdana
  font-size 100%
  color #fff
  width 810px
  overflow hidden
  margin auto

.clear
  clear both
  display block
  overflow hidden
  visibility hidden
  width 0
  height 0

.container
  background-color #000
  padding 0 20px

.header
  background-image url('/img/background.png')
  background-repeat no-repeat
  background-position left
  background-color #fff
  box-shadow inset 2px 2px 2px rgba(0, 0, 0, 0.8)
  .background
    background linear-gradient(left, 20% rgba(0, 0, 0, 0.0), 60% #000)
    height 293px
    div
      float right
  .logo
    background url('/img/anz_logo.png')
    width 246px
    height 40px
    margin 30px 0 0 0
  .title
    font-family 'AirNewzealand'
    font-size 400% 
    text-shadow 2px 2px 2px rgba(0, 0, 0, 0.8)
    margin 10px 0 0 0

  .copy
    text-align right
    text-shadow 1px 1px 1px rgba(0, 0, 0, 0.8)
    font-family 'AirNewzealand'
    font-size 120% 
    margin 10px 0 0 0
    .apex
      font-family 'ApexNewBook'
      font-size 120%
      padding 0 5px 0 5px
  .cta
    font-family 'ApexNewMedium'
    font-size 100%
    text-decoration underline
    margin 20px 0 0 0

.body
  position relative
  border-top 20px solid #000 
  background-color #fff
  height 600px
  overflow-y auto
  .thumbnail
    position relative
    cursor pointer
    overflow hidden
    float left
    background url('/img/loader.gif') no-repeat center
    box-shadow 1px 1px 2px 2px rgba(0, 0, 0, 0.8)
    width 158px
    height 158px
    margin 10px
    text-align center
    &:hover .info
      bottom 0px
      transition all 0.2s ease-in 
    img
      margin 4px 0 0 0
      width 150px
      height 150px
    .info
      font-family ApexNewLight
      position absolute
      opacity 0.7
      bottom -30px
      left 0px
      width 160px
      background-color #000
      transition all 0.2s ease-in 
      padding 5px 0
      font-size 12px
      line-height 20px
      text-align center
      .likes, .tags, .comments
        display inline-block
        width 12px
        height 11px
        margin 0 10px -2px 10px
      .likes
        background url('/img/stat_sprite.png')
      .comments
        background url('/img/stat_sprite.png') -13px
      .tags
        background url('/img/stat_sprite.png') -26px


  .bloader
    background url('/img/loader.gif') no-repeat center
    margin 5px
    height 40px
    line-height 40px
    color #000
    text-align right

.footer
  padding 20px 0
  .copy1
    font-size 240%
    font-family 'AirNewzealand'
    .apex
      font-family 'ApexNewLight'
      padding 0 5px 0 5px

    .instagram_logo
      display inline-block
      background url('/img/icon_instagram.png')
      width 39px
      height 40px

  .copy2
    font-family 'ApexNewBook'
    font-size 100%

.fade
  display hidden
  position absolute
  background-color rgba(0, 0, 0, 0.9)
  top 0px
  left 0px
  height 0
  width 100%
  opacity 0
  z-index 5

.fade, .fadeon, .modal, .modalon
  transition opacity 0.2s linear 

.fadeon
  cursor pointer
  display block
  opacity 1
  height 100%

.modal
  display hidden
  position fixed
  width 700px
  height 0
  top 50%
  left 50%
  margin-top -200px
  margin-left -350px
  background url('/img/loader.gif') no-repeat center
  background-color #fff
  div 
    color #000
    display none

.modalon
  display block
  opacity 1
  height 400px 
  z-index 10 
  div
    display block

.modalpop
  background none
  min-height 200px
  background-color #fff
  .close
    cursor pointer
    background url('/img/close.png') -11px 0
    position absolute
    top 0px
    right 0px
    width 10px
    height 11px
    margin 5px
    &:hover
      background url('/img/close.png') 

  .image
    background url('/img/loader.gif') no-repeat center
    float left
    img
      max-width 400px
      max-height 400px
  .info
    width 260px
    padding 20px
    float right
    .profile
      float left
      img
        border-radius 10px
        width 100px
    .username
      float right
    .caption
        word-wrap break-word

