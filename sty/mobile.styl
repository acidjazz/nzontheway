
@import _vars
@import _fonts
@import 'nib'

body,html
  margin 0
  padding 0
  font-family 'lucida grande',tahoma,verdana,arial,sans-serif
  font-size 100%
  color #fff
  background-color #fff
  margin auto

.clear
  clearfix()

.header
  position fixed
  top 0px
  background-color #000
  width 100%
  padding 5px
  .logo
    background url('/img/anz_logo.png')
    background-size 100%
    width 154px
    height 24px
    float right
    margin 5px 20px 5px 0
  .title
    float left
    font-size 110%
    margin 8px 20px 0px 20px
    .mobileinsta
      margin 0 5px
      img
        height 15px
  .copy, .cta
    display none


.body
  background-color #fff
  text-align center
  padding 40px 0 
  .thumbnail
    cursor pointer
    display inline-block
    background url('/img/loader.gif') no-repeat center
    border 1px solid #666
    width 150px
    height 150px
    margin 2px
    text-align center
    img
      width 150px
      height 150px
    .info
      display none
    .tools
      display none

  // same
  .bloader
    background url('/img/loader.gif') no-repeat center
    margin 5px
    height 40px
    line-height 40px
    color #000
    text-align right

.footer
  position fixed
  padding 5px 20px
  font-size 70%
  background-color #000
  bottom 0px
  width 100%
  text-align center
  .copy1
    display none
  .fpics
    display none

// same
.fade
  display hidden
  position absolute
  background-color rgba(0, 0, 0, 0.9)
  top 0px
  left 0px
  height 0
  width 100%
  opacity 0
  z-index 5
.fadeon
  cursor pointer
  display block
  opacity 1
  height 100%

.modal
  position fixed
  top 10px
  left 0px
  width 100%
  background url('/img/loader.gif') no-repeat center
  background-color #fff

.modalon
  opacity 1
  z-index 10

.modalpop
  font-size 80%
  text-align left
  color #000
  background none
  .close
    position absolute
    cursor pointer
    top 0px
    right 0px
    background-color #000
    color #fff
    &:after
      content: 'close'
    padding 10px 30px
  .info
    background-color #fff
    padding 0 10px 10px 0
    .right
      position absolute
      top 0px
      left 110px
      .duration
        color #777
    .profile
      float left
      img
        width 100px
    .caption
      float left
      margin -65px 0 0 110px
      max-height 200px
      overflow hidden

    .share
      display none

    .totals
      display none


@media only screen and (orientation : portrait)
  .modalpop
    .image
      position relative
      text-align center
      margin 10px 0 0 0
      img
        width 100%

@media only screen and (orientation : landscape)
  .modalpop
    .image
      position relative
      text-align center
      margin 10px 0 0 0
      img
        width 35%
